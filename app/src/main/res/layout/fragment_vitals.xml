<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    >

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp" android:stretchColumns="0,1,2,3,4,5,6,7"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vitals_titleRow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/height"
                android:id="@+id/textView"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/weight"
                android:id="@+id/textView3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bmi"
                android:id="@+id/textView2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bloodPressure"
                android:id="@+id/textView4"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/temperature"
                android:id="@+id/textView5"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/pulse"
                android:id="@+id/textView6"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/resp_rate"
                android:id="@+id/textView7"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/vitals_inputRow">

           <RelativeLayout>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editText"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAppearance="?android:attr/textAppearanceMedium"
                   android:text="@string/in"
                   android:id="@+id/textView9"
                   android:layout_alignParentTop="true"
                   android:layout_toRightOf="@+id/editText"
                   android:layout_toEndOf="@+id/editText"/>

           </RelativeLayout>
            <RelativeLayout>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:id="@+id/editText2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/lb"
                    android:id="@+id/textView10"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/editText2"
                    android:layout_toEndOf="@+id/editText2"/>

            </RelativeLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_column="2"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

            <RelativeLayout>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:id="@+id/editText4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/slash"
                    android:layout_toRightOf="@+id/editText4"
                    android:layout_toEndOf="@id/editText4"
                    android:id="@+id/textView11" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:id="@+id/editText5"
                    android:layout_toRightOf="@id/textView11"
                    android:layout_toEndOf="@id/textView11"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/mm_hg"
                    android:layout_toRightOf="@+id/editText5"
                    android:layout_toEndOf="@+id/editText5"
                    android:id="@+id/textView12" />
            </RelativeLayout>

            <RelativeLayout>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:id="@+id/editText6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/f"
                    android:layout_toRightOf="@+id/editText6"
                    android:layout_toEndOf="@+id/editText6"
                    android:id="@+id/textView13" />

            </RelativeLayout>

            <RelativeLayout>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:id="@+id/editText7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/bmp"
                    android:layout_toRightOf="@+id/editText7"
                    android:layout_toEndOf="@+id/editText7"
                    android:id="@+id/textView14" />

            </RelativeLayout>

            <RelativeLayout>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:id="@+id/editText8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/rpm"
                    android:layout_toRightOf="@+id/editText8"
                    android:layout_toEndOf="@+id/editText8"
                    android:id="@+id/textView15" />

            </RelativeLayout>
        </TableRow>

    </TableLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#FF0000FF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/patient_summary"
        android:id="@+id/vitals_patientSummary"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/tableLayout"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
